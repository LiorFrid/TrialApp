<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/roboto">

    <Button
        android:id="@+id/WellnessButton"
        android:layout_width="123dp"
        android:layout_height="63dp"
        android:text="Wellness"
        app:layout_constraintEnd_toStartOf="@+id/LifeStyleButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="250dp"
        app:layout_constraintTop_toBottomOf="@+id/TopNewsButton" />

    <Button
        android:id="@+id/TopNewsButton"
        android:layout_width="123dp"
        android:layout_height="63dp"
        android:text="Top News"
        app:layout_constraintEnd_toStartOf="@+id/TBDButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="190dp" />

    <Button
        android:id="@+id/LifeStyleButton"
        android:layout_width="123dp"
        android:layout_height="63dp"

        android:text="LifeStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/WellnessButton"
        tools:layout_editor_absoluteY="250dp"
        app:layout_constraintTop_toBottomOf="@+id/TBDButton" />

    <Button
        android:id="@+id/TBDButton"
        android:layout_width="123dp"
        android:layout_height="63dp"

        android:text="TBD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/TopNewsButton"
        tools:layout_editor_absoluteY="190dp" />

    <Button
        android:id="@+id/FashionButton"
        android:layout_width="123dp"
        android:layout_height="63dp"

        android:text="Fashion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/SportButton"
        tools:layout_editor_absoluteY="310dp"
        app:layout_constraintTop_toBottomOf="@+id/LifeStyleButton" />

    <Button
        android:id="@+id/SportButton"
        android:layout_width="123dp"
        android:layout_height="63dp"

        android:text="Sport"
        app:layout_constraintEnd_toStartOf="@+id/FashionButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="310dp"
        app:layout_constraintTop_toBottomOf="@+id/WellnessButton" />

</androidx.constraintlayout.widget.ConstraintLayout>